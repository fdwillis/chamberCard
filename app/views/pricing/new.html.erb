

<div class="card card-style">
  <div class="content mb-0">
		<h3>New Pricing For <%= @productL['name'].titleize %></h3>
		<%= form_for :newPricing, url: service_pricing_index_path do |f| %>
			
      <div class="d-flex">
          <div class="pt-1">
              <h5 data-activate="toggle-id-2" class="font-600"><strong><em>Create package pricing?</em></strong></h5>
          </div>
          <div class="ml-auto mr-4 pr-2">
              <div class="custom-control ios-switch ios-switch-icon">
                  <%= f.check_box :package, class: 'ios-input', id: 'toggle-id-2', onclick: "packageOrNah()" %>
                  <label class="custom-control-label" for="toggle-id-2"></label>
                  <span>YES</span>
                  <span>NO</span>
              </div>
          </div>
      </div>
      <div data-switch="toggle-id-2" class="switch-is-unchecked" style="display: none;">
        <p class="mb-0 pb-0 pt-2"><em><u>One Time Purchase For Multiple Services</u></em></p>
      	<div class="input-style has-icon">
			    <span class="color-highlight input-style-2">Price</span>
			    <%= f.number_field :unit_amount, class: "form-control" %>
				</div> 
				<div class="input-style has-icon">
			    <span class="color-highlight input-style-2">Services Are Included With This Purchase</span>
			    <%= f.number_field :divide_by, class: "form-control", placeholder: '0' %>
				</div> 
      </div>

      <div id="one-offprice" class="switch-is-checked" style="display: block;">
        <p class="mb-0 pb-0 pt-2"><em><u>Single Service Purchase</u></em></p>
      	<div class="input-style has-icon">
			    <span class="color-highlight input-style-2">Price</span>
			    <%= f.number_field :unit_amount, class: "form-control" %>
				</div> 
      </div>

		  <%= f.submit "Add Service", class: "btn btn-full bg-yellow1-dark btn-m text-uppercase rounded-sm shadow-l col-12 mb-3 mt-4 font-900"%>

		<% end %>
	</div>
</div>

<script type="text/javascript">
	function packageOrNah() {
	  // Get the checkbox
	  var checkBox = document.getElementById("toggle-id-2");
    var onOffDIV = document.getElementById("one-offprice");

	  // If the checkbox is checked, display the output text
	  if (checkBox.checked == true){
	    // text.style.display = "block";
	    console.log("CHECKED");
	    onOffDIV.style.display = "none";
	  } else {
	  	console.log("UNCHECKED");
	    onOffDIV.style.display = "block";
	  }
	}

	window.onload = packageOrNah;
</script>