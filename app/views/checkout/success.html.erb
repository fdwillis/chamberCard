<div class="card card-style">
  <div class="content">
    <div class="d-flex mb-0">
      <div class="align-self-center pr-3">
          <i class="fa fa-check-circle color-green1-dark fa-5x"></i>
      </div>
      <div class="align-self-center">
          <h2>Purchase Successful</h2>
          <h2><small>Total Paid: <%= number_to_currency(@sessionPaid['amount_total']*0.01, precision: 2) %></small></h2>
          <p class="line-height-s">Members save on every transaction fee! <%= link_to "Learn More", membership_path %></p>
      </div>
    </div>
    <div class="d-flex mt-4">
      <div class="align-self-center pr-3">
        <h3>Your Order Includes</h3>
        <% @line_items.each do |litm| %>
          <p class="line-height-s"><%= litm['quantity'] %>x <%= litm['description'] %></p>
  		    <div class="divider w-100 mt-2 mb-2 divider-margins"></div>
        <% end %>
      </div>
    </div>
    <div class="col-12"><a href="<%= @paymentCharge['charges']['data'][0]['receipt_url'] %>" target="_blank" class="btn btn-full btn-m bg-blue2-dark rounded-sm text-uppercase font-800 mt-3">View Receipt</a></div>
  </div>
</div>