<div class="page-content header-clear-medium">
    
    <div class="card card-style">
        <div class="content mt-4 mb-0">
            <h1 class="text-center font-900 font-40 text-uppercase mb-0">Login</h1>
            <p class="bottom-0 text-center color-highlight font-11">Let's get you logged in</p>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="input-style has-icon input-style-2 input-required pb-1">
                  <i class="input-icon fa fa-user color-theme"></i>
                  <span>Email</span>
                  <em>(required)</em>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
              </div> 
              <div class="input-style has-icon input-style-2 input-required pb-1">
                  <i class="input-icon fa fa-lock color-theme"></i>
                  <span>Password</span>
                  <em>(required)</em>
                  <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
              </div> 
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <%= f.submit "Login", class: "col-md-12 btn btn-m mt-2 mb-4 btn-full bg-green1-dark text-uppercase font-900" %>
            <% end %> 

            <div class="pull-left">
                <div class="font-11 pb-2 color-theme opacity-60 pb-3"><a href="#" class="color-theme"><%= render "devise/shared/links" %></a></div>
            </div>
        </div>
        
    </div>
</div>
