<div class="card card-style">
    <div class="content mt-3 mb-3">
      <h3>Services</h3>
      <p>
          Services offered by Messy Lawns
      </p>
    </div>
</div>

<div class="card card-style bg-theme pb-0">
  <div class="content">
      <div class="tab-controls tabs-round tab-animated tabs-medium tabs-rounded shadow-xl" 
           data-tab-items="2" 
           data-tab-active="bg-green1-dark color-white">
          <a href="#" data-tab-active data-tab="tab-8"><i class="fa fa-home"></i> Residential</a>
          <a href="#" data-tab="tab-9"><i class="fa fa-building"></i> Business</a>
      </div>
      <div class="clearfix mb-3"></div>
      <div class="tab-content" id="tab-8">
        <div class="card card-style">
          <% if @residential.present? %>
            <% @residential.each do |h| %>
              <div class="content mb-3">
                <div class="align-self-center">
                    <h5 class=""><%= h['title'] %></h5>
                    <p class="font-600 opacity-40"><%= number_to_currency(h['cost'], precision: 2) %></p>
                </div>
                <div class="align-self-center">
                    <p class="font-600 opacity-40">By: <%= h['sellerUsername'].titleize %></p>
                </div>
                <% if current_user&.stripeSourceVerified %>
                  <div class="align-self-center">
                      <a href="<%= new_charge_path(title: h['title'], uuid: h['uuid'], desc: h['desc']) %>" class="btn btn-sm col-md-12 rounded-sm bg-green1-dark text-uppercase font-800">PURCHASE</a>
                  </div>
                <% end %>
                <br>
                <div class="align-self-center">
                  <a href="<%= service_path(id: h['uuid'], desc: h['desc']) %>" class="btn btn-sm col-md-12 rounded-sm bg-yellow1-dark text-uppercase font-800">View Service</a>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="tab-content" id="tab-9">
        <div class="card card-style">
          <% if @business.present? %>
            <% @business.each do |h| %>
              <div class="content mb-3">
                  <div class="align-self-center">
                      <h5 class=""><%= h['title'] %></h5>
                      <p class="font-600 opacity-40"><%= number_to_currency(h['cost'], precision: 2) %></p>
                  </div>
                  <div class="align-self-center">
                      <p class="font-600 opacity-40">By: <%= h['sellerUsername'].titleize %></p>
                  </div>
                  <% if current_user&.stripeSourceVerified %>
                    <div class="align-self-center">
                        <a href="<%= new_charge_path(title: h['title'], uuid: h['uuid']) %>" class="btn btn-sm col-md-12 rounded-sm bg-green1-dark text-uppercase font-800">PURCHASE</a>
                    </div>
                  <% end %>
                  <br>
                  <div class="align-self-center">
                    <a href="<%= service_path(id: h['uuid']) %>" class="btn btn-sm col-md-12 rounded-sm bg-yellow1-dark text-uppercase font-800">View Hourlie</a>
                  </div>
              </div>
            <% end %>
          <% end %>           
        </div>
      </div>
  </div>
</div>
