<% if current_user&.manager? || current_user&.customer? %>


    <div class="card card-style">
      <div class="content mt-3 mb-3">
        <% if current_user&.customer? %>
              <h3>Track Your Orders</h3>
              <p class='text-justify'>
                Check on your orders anytime by clicking your Tracking Number(s)
              </p>
        <% end %>
        <% if current_user&.manager? %>
          <h3>Order Fulfillment</h3>
            <p class='text-justify'>
              Once you receive your tracking numbers, enter them below!
            </p>
        <% end %>
      </div>
    </div>
  


    <div class="card card-style">
      <div class="content mb-0">
        <% if @payments.present?  %>
          <div class="row mb-4">
            <div class="col-5"><h4 class="font-14 text-left"><u>Product</u></h4></div>
            <div class="col-3"><h4 class="font-14 text-justify"><u>QTY</u></h4></div>
            <div>&nbsp;</div>
          </div>
          <% @payments.each_with_index do |h, hindx| %>
              <% h['items'].each_with_index do |itm,indx| %>
                <% if !Stripe::Invoice.retrieve(h['invoice'], {stripe_account: h['sellerStripeID']})['metadata']['customerConfirmed'].blank? && Stripe::Invoice.retrieve(h['invoice'], {stripe_account: h['sellerStripeID']})['metadata']['customerConfirmed'] == 'false' %>


                  <% if itm['product']['type'] == 'good' %>
                    <div class="row mb-4">
                      <div class="col-5"><h4 class="font-14 text-left"><%= itm['product']['name'].titleize %></h4></div>
                      <% if itm['price']['transform_quantity'] && !itm['price']['transform_quantity']['divide_by'].blank? %>
                        <div class="col-3"><h4 class="font-14 text-justify"><%= (itm['invoiceLine']['quantity'].to_i * itm['price']['transform_quantity']['divide_by']) - itm['invoiceLine']['metadata']['claimed'].to_i %></h4></div>
                      <% else %>
                        <div class="col-3"><h4 class="font-14 text-justify"><%= itm['invoiceLine']['quantity'].to_i - itm['invoiceLine']['metadata']['claimed'].to_i %></h4></div>
                      <% end %>
                      <div class="col-4">
                        <button class="accordion-btn  btn btn-m btn-full bg-green1-dark text-uppercase font-900" data-toggle="collapse" data-target="#<%= itm['invoiceLine']['id'] %>" aria-expanded="false" style='margin-top:-10px;'>
                          <i class="fa fa-truck"></i>
                        </button>
                      </div>
                    </div>
                    <div class="accordion" id="accordion-1">
                      <div class="mb-4">
                        <div id="<%= itm['invoiceLine']['id'] %>" class="collapse" data-parent="#accordion-1" style="">

                        <% if current_user&.manager?  %>
                          <%= form_for :trackingNumber, url: trackingNumber_path do |f| %>
                            <div class="input-style has-icon input-style-2 input-required pb-1">
                                <i class="input-icon fa fa-truck color-theme"></i>
                                <span class="color-highlight input-style-1-active">Tracking Numbers</span>
                                <em>(required)</em>
                                <%= f.text_field :trackingIDs, placeholder: "1ZSD6756...", required: true, value: !Stripe::Invoice.retrieve(h['invoice'], {stripe_account: h['sellerStripeID']})['metadata']['trackingNumbers'].blank? ? Stripe::Invoice.retrieve(h['invoice'], {stripe_account: h['sellerStripeID']})['metadata']['trackingNumbers'] : nil %>
                                <%= f.hidden_field :invoice, value: h['invoice'] %>
                            </div> 
                            <p class="text-center">Seperate Tracking Numbers By Comma</p>
                            <%= f.submit "Update Tracking", class: "col-md-12 btn btn-m mt-2 mb-4 btn-full bg-green1-dark text-uppercase font-900" %>
                          <% end %>
                        <% end %>


                        <% if current_user&.customer?  %>
                          <% if Stripe::Invoice.retrieve(h['invoice'], {stripe_account: h['sellerStripeID']})['metadata']['trackingNumbers'].blank? %>
                            <p>Your order ahas been received. Check back for tracking updates</p>
                          <% else %>
                            <div class="row">
                              <% Stripe::Invoice.retrieve(h['invoice'], {stripe_account: h['sellerStripeID']})['metadata']['trackingNumbers'].split(",").each do |t| %>
                                <div class="text-left col-12">
                                  Tracking Number - <%= link_to t, "https://www.google.com/search?q=#{t}&oq=#{t}", 'target' => '_blank' %>
                                </div>
                              <% end %>
                            </div>
                            <%= form_for :trackingNumber, id: "#{h['customer']}#{h['invoice']}", url: trackingNumber_path do |f| %>
                              <div class="input-style input-style-2 mt-2 ">
                                <%= f.select :orderIssueStatus, [['Yes', 0], ['Yes, But theres an issue',1]], id: "#{h['customer']}#{h['invoice']}", onchange: "showReport(#{h['customer']}#{h['invoice']});" %>
                                <%= f.hidden_field :invoice, value: h['invoice'] %>
                                <%= f.hidden_field :sellerStripeID, value: h['sellerStripeID'] %>

                              </div>
                              <%= f.submit "Update Status", class: "col-md-12 btn btn-m mt-2 mb-4 btn-full bg-yellow1-dark text-uppercase font-900" %>
                            <% end %>
                          <% end %>
                        <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
          <% end %>
        <% end %>
      </div>
    </div>






<% end %>





<% if !current_user %>
  <div class="page-content header-clear-medium">

        <div class="card card-style">
            
            <div class="d-flex content mb-1">
                <!-- left side of profile -->
                <div class="flex-grow-1">
                    <h1 class="font-700">Book Now</h1>
                    <p class="mb-2">
                      All of your scheduled appointments will be posted here. Cancel an appointment anytime for free!
                    </p>
                </div>
                <!-- right side of profile. increase image width to increase column size-->
            </div>
            <!-- follow buttons-->
            <div class="content mb-0">
                <div class="row mb-0">
                    <div class="col-6">
                        <a href="<%= new_user_registration_path %>" class="btn btn-full btn-s rounded-s text-uppercase font-900 bg-green1-dark">Create Account</a>
                    </div>
                    <div class="col-6">
                        <a href="<%= new_user_session_path %>" class="btn btn-full btn-s rounded-s text-uppercase font-900 color-theme border-green1-dark">Login</a>
                    </div>
                </div>
            </div>
            
            <div class="divider mt-4 mb-0"></div>
        </div>
  </div>
<% end %>