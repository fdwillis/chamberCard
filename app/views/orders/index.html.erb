<% if @payments.present? %>
  <% @payments.each do |h| %>
    <div class="card card-style">
      <div class="content mb-0">
          
          <!-- <div class="menu-title"><h1>Payment Sent</h1><p class="color-highlight">Transaction Details for Payment</p></div>
          <div class="divider divider-margins mb-1 mt-3"></div> -->
          <div class="row mb-0">
              <div class="col-3 icon icon-xl">
                  <i class="fa fa-check bg-fade-green2-dark rounded-xl color-green2-dark" width='80'></i>
              </div>
              <div class="col-9 pl-4">
                  <div class="d-flex">
                      <div><p class="font-700 color-theme">Seller</p></div>
                      <div class="ml-auto"><p><%= h['sellerName'] %></p></div>
                  </div>
                  <div class="d-flex">
                      <div><p class="font-700 color-theme">Customer</p></div>
                      <div class="ml-auto"><p><%= h['customer'] %></p></div>
                  </div>
                  <div class="d-flex">
                      <div><p class="font-700 color-theme">Date</p></div>
                      <div class="ml-auto"><p><%= h['date'] %></p></div>
                  </div>
              </div>
          </div>
          <div class="divider mt-3 mb-3"></div>
          <div class="row mb-0">
          
              <div class="col-6"><h4 class="font-14 text-left"><u>Item</u></h4></div>
              <div class="col-3"><h4 class="font-14 text-center"><u>Package</u></h4></div>
              <div class="col-3"><h4 class="font-14 text-center"><u>Available</u></h4></div>
          </div>
          <% h['items'].each_with_index do |itm,indx| %>
            <% if itm['product']['type'] == 'good' %>
              <% if !itm['invoice']['metadata']['claimed'].blank? && (itm['invoice']['quantity'] > itm['invoice']['metadata']['claimed'].to_i) %>
                
                <div class="row mb-2">
                  <div class="col-6"><h4 class="font-14 text-left"><%= itm['product']['name'] %></h4></div>
                  <% if itm['price']['transform_quantity'] && !itm['price']['transform_quantity']['divide_by'].blank? %>
                    <div class="col-3"><h4 class="font-14 text-center"><i class="fa fa-check bg-fade-green2-dark rounded-xl color-green2-dark"></i></h4></div>
                    <div class="col-3"><h4 class="font-14 text-center"><%= (itm['invoice']['quantity'].to_i * itm['price']['transform_quantity']['divide_by']) - itm['invoice']['metadata']['claimed'].to_i %></h4></div>
                  <% else %>
                    <div class="col-3"><h4 class="font-14 text-center"><i class="fa fa-times bg-fade-red2-dark rounded-xl color-red2-dark"></i></h4></div>
                    <div class="col-3"><h4 class="font-14 text-center"><%= itm['invoice']['quantity'].to_i - itm['invoice']['metadata']['claimed'].to_i %></h4></div>
                  <% end %>
                  <!-- <div class="col-2"><h4 class="font-14 text-right">Claimed: <%= itm['invoice']['metadata']['claimed'] %></h4></div> -->
                </div>
              <% end %>
            <% end %>
          <% end %>
          <a href="#" class="close-menu btn btn-full btn-m bg-yellow1-dark rounded-sm text-uppercase font-800">Schedule</a>
          <div class="scheduleIt mt-4">
          
            <!--     <%= form_for :bookIt, url: service_path(id: 23434), method: :patch do |f| %>
              <div class="input-style has-icon input-style-2 input-required pb-1">
                <span class="color-highlight input-style-1-active">Price</span>
                <em>(required)</em>
                <%= f.select :sellerItem, h['items'].map{|p,i| (p['price']['transform_quantity'] && !p['price']['transform_quantity']['divide_by'].blank?) ? true : false }, required: true %>
              </div>
            <% end %> -->
          </div>
          
      </div>
      
    </div>
  <% end %>
<% end %>




























<% else %>
<div class="page-content header-clear-medium">
        
        <div class="card card-style">
            
            <div class="d-flex content mb-1">
                <!-- left side of profile -->
                <div class="flex-grow-1">
                    <h1 class="font-700">Book Now</h1>
                    <p class="mb-2">
                      All of your scheduled appointments will be posted here. Cancel an appointment anytime for free!
                    </p>
                </div>
                <!-- right side of profile. increase image width to increase column size-->
            </div>
            <!-- follow buttons-->
            <div class="content mb-0">
                <div class="row mb-0">
                    <div class="col-6">
                        <a href="<%= new_user_registration_path %>" class="btn btn-full btn-s rounded-s text-uppercase font-900 bg-green1-dark">Create Account</a>
                    </div>
                    <div class="col-6">
                        <a href="<%= new_user_session_path %>" class="btn btn-full btn-s rounded-s text-uppercase font-900 color-theme border-green1-dark">Login</a>
                    </div>
                </div>
            </div>
            
            <div class="divider mt-4 mb-0"></div>
        </div>
    </div>
<% end %>
