        <% else %>
          <div class="row text-center">
            <% if !current_user&.manager? %>
              <p class="mb-5">

                  You're almost there! Please add your default source and contact details. 
              </p>
              <a href="#" data-menu="menu-transaction-transfer" class="col-12">
                  <div class="card card-style ml-2 mb-3">
                      <i class="fa fa-credit-card color-highlight fa-2x mt-3"></i>
                      <h1 class="pt-2 font-18">Card</h1>
                      <p class="font-11 opacity-50 mt-n2 mb-3">Tap to add another card</p>
                  </div>
              </a>
            <% else %>
              <% if (!@phone.blank? && !@email.blank?) %>
                <p class="mb-5">
                
                    We will contact you soon to verify your contact details &amp; complete your account activation!  
                </p>
                <a href="#" class="col-12">
                    <div class="card card-style">
                        <i class="fa fa-university color-highlight fa-2x mt-3"></i>
                        <h1 class="pt-2 font-18">Bank</h1>
                        <p class="font-11 opacity-50 mt-n2 mb-3">PENDING</p>
                    </div>
                </a>
              <% else %>
                <p class="mb-5">
                
                    You're almost there! Please add your default source and contact details. 
                </p>
                <a href="#" data-menu="menu-transaction-request" class="col-12">
                    <div class="card card-style">
                        <i class="fa fa-university color-highlight fa-2x mt-3"></i>
                        <h1 class="pt-2 font-18">Bank</h1>
                        <p class="font-11 opacity-50 mt-n2 mb-3">Tap to add Bank Account</p>
                    </div>
                </a>
              <% end %>
            <% end %>
          </div>  
        <% end %>
      <% end %>
    </div>
  </div>
  <% if !current_user&.stripeUserID.blank? %>
    <div class="card card-style">
        <div class="content mb-0">
            <h2 class="text-center">Account Information</h2>
            <p class="mb-5 text-center">
                <% if current_user&.customer? %>
                  This information is so that service providers can contact you. Payment receipts will be sent to the email address below.
                <% end %>
                <% if current_user&.manager? %>
                  This information is so that Messy Services can contact you to verify your bank account &amp; contact details on your clients behalf. Payment receipts will be sent to the email address below.
                <% end %>
            </p>
            <%= form_for :updateCustomer, url: stripe_customer_path(id: current_user&.stripeUserID), method: :put do |f| %>

              <% if !current_user&.manager? %>
                <div class="input-style input-style-2 has-icon input-required">
                    <i class="input-icon fa fa-user"></i>
                    <span class="color-highlight input-style-1-active">Name</span>
                    <em>(required)</em>
                    <%= f.text_field :name, placeholder: "Legal Name", class: "form-control", value: @name, required: true %>
                </div> 
              <% end %>
              <div class="input-style input-style-2 has-icon input-required mt-4">
                  <i class="input-icon fa fa-at"></i>
                  <span class="color-highlight input-style-1-active">Email Address</span>
                  <em>(required)</em>
                  <%= f.email_field :email, value: @email, class: "form-control", required: true %>
              </div> 
              <div class="input-style input-style-2 has-icon input-required mt-4">
                  <i class="input-icon fa fa-phone"></i>
                  <span class="color-highlight input-style-1-active">Phone Number</span>
                  <em>(required)</em>
                  <%= f.text_field :phone, placeholder: "2628547895", class: "form-control", value: @phone, required: true %>
              </div> 
              <div class="col-12">
                <div class="input-style input-style-2">
                  <%= f.submit "Save Information", class: "btn bg-green1-dark text-uppercase rounded-sm font-900"%>
                </div>
              </div>
            <% end %>
        </div>
    </div>   
  <% end %>      
      
