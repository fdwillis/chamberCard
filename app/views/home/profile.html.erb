          <p class="mb-5">
              Your account is unable to make purchases. If you would like to purchase services, get started by clicking 'Proceed' below!
          </p>

          <%= form_for :newStripeCustomer, url: stripe_customers_path do |f| %>
            <%= f.submit "Proceed", class: "btn btn-full bg-yellow1-dark btn-m text-uppercase rounded-sm shadow-l mb-3 mt-4 font-900"%>

          <% end %>
          
      <% end %>

      <% if !current_user.stripeUserID.blank? %>
