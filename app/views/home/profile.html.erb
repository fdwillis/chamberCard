          showing sources
          showing form to add new source
          button to delete source in one click
          <div class="card card-style">
            <div class="content">
              <% @sources.each do |s| %>
                <% if s['object'] == 'card' %>
                  <div style="align-items: center;" class=" card card-style ml-2 mb-3">
                    <% if s['brand'] == "Visa" %>
                      <%= image_tag "pay-1.png","width"=>"50", stlye: '' %>
                      <h5 class="mb-n2">Visa</h5>
                    <% elsif s['brand'] == "MasterCard" %>
                      <%= image_tag "pay-2.png","width"=>"50" %>
                      <h5 class="mb-n2">MasterCard</h5>
                    <% elsif s['brand'] == "American Express" %>
                      <%= image_tag "pay-5.png","width"=>"50" %>
                      <h5 class="mb-n2">American Express</h5>
                    <% end %>
                      <p class="mt-n1 mb-0 font-10">**** <%= s['last4'] %></p>
                  </div>  
                <% end %>

                <% if s['object'] == 'bank_account' %>
                  <div class="text-center card card-style ml-2 mb-3">
                      <i class="fa fa-university color-highlight fa-2x mt-3"></i>
                      <h1 class="pt-2 font-18"><%= s['last4'] %></h1>
                      <p class="font-11 opacity-50 mt-n2 mb-3"><%= s['routing_number'] %></p>
                  </div>
                <% end %>
                <div class="divider mt-2 mb-2"></div>
              <% end %>
            </div>
          </div>
          <h2 class='text-center'>New Payment Source</h2>
          <div class="row text-center mb-0 mt-n2">
              <a href="#" data-menu="menu-transaction-transfer" class="col-6 pr-0">
                  <div class="card card-style ml-2 mb-3">
                      <i class="fa fa-credit-card color-highlight fa-2x mt-3"></i>
                      <h1 class="pt-2 font-18">Card</h1>
                      <p class="font-11 opacity-50 mt-n2 mb-3">Tap to add another card</p>
                  </div>
              </a>
              <a href="#" data-menu="menu-transaction-request" class="col-6 pl-0">
                  <div class="card card-style ml-2 mb-3">
                      <i class="fa fa-university color-highlight fa-2x mt-3"></i>
                      <h1 class="pt-2 font-18">Bank</h1>
                      <p class="font-11 opacity-50 mt-n2 mb-3">Tap to Request Funds</p>
                  </div>
              </a>
          </div>
        <% else %>
            <p class="mb-5">
                This contains basic profile fields, easily editable, set to disable or pre-populate with useful information.
            </p>
            <%= form_for :newStripeToken, url: stripe_tokens_path do |f| %>
              <div class="input-style input-style-2 has-icon input-required">
                  <i class="input-icon fa fa-credit-card"></i>
                  <span class="color-highlight input-style-1-active">Card Number</span>
                  <em>(required)</em>
                  <%= f.number_field :number, class: 'form-control', required: true, placeholder: '1234 5678 9012 3456', minlength: 4, maxlength: 16 %>
              </div> 
              <div class="input-style input-style-2 has-icon input-required mt-4">
                  <i class="input-icon fa fa-calendar"></i>
                  <span class="color-highlight input-style-1-active">Expiration Month</span>
                  <em>(required)</em>
                  <%= f.number_field :exp_month, class: 'form-control', required: true, placeholder: '05' %>
              </div> 
              <div class="input-style input-style-2 has-icon input-required mt-4">
                  <i class="input-icon fa fa-calendar"></i>
                  <span class="color-highlight input-style-1-active">Expiration Year</span>
                  <em>(required)</em>
                  <%= f.number_field :exp_year, class: 'form-control', required: true, placeholder: '2023', minlength: 4 %>
              </div> 
              <div class="input-style input-style-2 has-icon input-required mt-4">
                  <i class="input-icon fa fa-lock"></i>
                  <span class="color-highlight input-style-1-active">CSC</span>
                  <em>(required)</em>
                  <%= f.number_field :cvc, class: 'form-control', required: true, placeholder: '123' %>
              </div> 
              <%= f.submit "Add Card", class: "btn btn-full bg-green1-dark btn-m text-uppercase rounded-sm shadow-l mb-3 mt-4 font-900"%>

            <% end %>
            
        <% end %>
      <% end %>
