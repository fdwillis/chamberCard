<div class="card card-style">
  <div class="content mb-2">
    <h3>Customers of <%= ENV['siteName'] %></h3>
    <p>View customer profiles &amp; financials </p>
    <table class="table table-borderless text-center rounded-sm shadow-l" style="overflow: hidden;">
      <thead>
        <tr class="bg-dark3-dark">
            <th scope="col-2" class="color-white">Name</th>
            <th scope="col-2" class="color-white">Spend</th>
            <th scope="col-2" class="color-white">Documents</th>
        </tr>
      </thead>
      <tbody>
      	<% @customers.each do |cust| %>
        <% stripeSpend = Stripe::Charge.list({customer: cust['id'], limit: 100}, {stripe_account: current_user&.stripeMerchantID})['data'].sum(&:amount) * 0.01 %>
	        <tr>
	            <th scope="row"><%= link_to cust['name'], stripe_customer_path(cust['id'])  %></th>
              <% if stripeSpend > 0 %>
  	            <td class="color-green1-dark"><%= number_to_currency(stripeSpend, precision: 2) %></td>
              <% else %>
                <td class="color-red1-dark"><%= number_to_currency(stripeSpend, precision: 2) %></td>
              <% end %>
	            <td class="color-blue2-dark"><i class="fa fa-file "></i></td>
	        </tr>
      	<% end %>
      </tbody>
    </table>
  </div>
</div>